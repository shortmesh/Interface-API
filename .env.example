# Server Configuration
# Host the server will bind to
HOST=127.0.0.1
# Port the server will listen on
PORT=8080
# Logging level for application output (debug, info, warn, error)
LOG_LEVEL=info

# Database Configuration
# Choose either SQLite or MySQL
# SQLite database file path (used by default unless MySQL is configured)
SQLITE_DB_PATH=./data/shortmesh-interface.db
# MySQL database host address
MYSQL_HOST=localhost
# MySQL database port
MYSQL_PORT=3306
# Name of the MySQL database to connect to
MYSQL_DATABASE=shortmesh
# MySQL database username
MYSQL_USERNAME=root
# MySQL database password
MYSQL_PASSWORD=

# Migration Settings
# Automatically run pending database migrations on application startup
AUTO_MIGRATE=true
# Automatically create all database tables on first run
AUTO_CREATE_TABLES=true

# Cryptographic Keys
# Base64-encoded 32-byte key used for data encryption
ENCRYPTION_KEY=
# Base64-encoded 32-byte key used for hashing and integrity checks
HASH_KEY=

# External Services
# Base URL for the Matrix Authentication Service
MAS_URL=
# URL for the Matrix Authentication Service (admin endpoint)
MAS_ADMIN_URL=
# Client ID used for authenticating with MAS as an admin client
ADMIN_CLIENT_ID=
# Client secret used for authenticating with MAS as an admin client
ADMIN_CLIENT_SECRET=
# Base URL for the Matrix client
MATRIX_CLIENT_URL=

# RabbitMQ Configuration
# Connection URL for RabbitMQ message broker
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
